{
    "name": "realtimeOSM",
    "version": "0.1.0",
    "description": "server that manages and runs tasks to provide realtime osm data",
    "main": "realtimeOSM.js",
    "scripts": {
        "start": "node realtimeOSMserver.js",
        "pretest": "./node_modules/.bin/eslint **.js && rm -r -f ./test/testdata ./test/testgeofabrikbounds ./test/test.db ./test/testaccess.log",
        "test": "node test/tests.js",
        "posttest": "rm -r -f ./test/testdata ./test/testgeofabrikbounds ./test/test.db ./test/testaccess.log"
    },
    "repository": {
        "type": "git",
        "url": "https://gitlab.gistools.geog.uni-heidelberg.de/giscience/realtime_osm/realtime_osm"
    },
    "author": "Stefan Eberlein",
    "license": "MIT",
    "dependencies": {
        "@mapbox/geojsonhint": "^2.2.0",
        "@mapbox/togeojson": "^0.16.0",
        "@turf/area": "^5.1.5",
        "@turf/boolean-within": "^5.1.5",
        "@turf/flatten": "^5.1.5",
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "geojson-rewind": "^0.2.0",
        "minimist": "^1.2.3",
        "morgan": "^1.9.1",
        "sequelize": "^5.15.1",
        "serve-index": "^1.9.1",
        "sqlite3": "^4.1.1",
        "wellknown": "^0.5.0",
        "winston": "^2.4.4",
        "xmldom": "^0.1.31"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true,
            "node": true,
            "jquery": true
        },
        "extends": "eslint:recommended",
        "parserOptions": {
            "sourceType": "module"
        },
        "rules": {
            "linebreak-style": [
                "error",
                "unix"
            ],
            "semi": [
                "error",
                "always"
            ],
            "no-console": "off"
        }
    },
    "devDependencies": {
        "eslint": "^5.16.0",
        "eslint-plugin-node": "^6.0.1"
    }
}
